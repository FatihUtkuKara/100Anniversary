                android:layout_height="100dp"
                android:layout_marginTop="750dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/modelIncreasing"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="50dp"
                    android:text=" Model\n (Increasing)"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/modelDecreasing"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="50dp"
                    android:text=" Model\n(Decreasing)"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="850dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/bodyTypeIncreasing"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="50dp"
                    android:text=" Body Type\n (Increasing)"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/bodyTypeDecreasing"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="50dp"
                    android:text=" Body Type\n(Decreasing)"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="950dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <CheckBox
                    android:id="@+id/transmissionIncreasing"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="50dp"
                    android:text=" Transmission\n (Increasing)"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <CheckBox
                    android:id="@+id/transmissionDecreasing"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="50dp"
                    android:text=" Transmission\n(Decreasing)"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


            </LinearLayout>




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>